FROM node:22-alpine AS builder
WORKDIR /app

# Installer les dépendances
COPY package*.json ./
RUN npm ci

# Copier le code
COPY . .

# Builder le projet Next.js
RUN npm run build

# Image finale légère
FROM node:22-alpine
WORKDIR /app
ENV NODE_ENV=production
COPY --from=builder /app ./
EXPOSE 4000

CMD ["npm", "start"]